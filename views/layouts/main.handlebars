  <title>Restaurants List</title>

  <link rel="stylesheet" href="/stylesheets/bootstrap.css">
</head>

<body>
  <header>
    <!-- navigation -->
    <nav class="navbar navbar-light bg-light justify-content-between">
      <div class="container">
        <a class="navbar-brand" href="/">
