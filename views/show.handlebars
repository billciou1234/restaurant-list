<h1 class="mb-1 restaurant-show-title text-center">{{restaurant.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurant.location}}
        <a href="https://goo.gl/maps/V9mKwVJ4s5v" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          Google Map：
        </span>
        <a href="{{restaurant.google_map}}" target="_blank">{{restaurant.google_map}}</a>

      </p>
      <p class="mb-5">
        {{restaurant.description}}
      </p>



      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}"
        style="max-width: 600px;">
    </div>


  </div>
  <div class="input-group-append justify-content-center">
    <a class="btn btn-success mr-1 mb-3" href="/restaurants/{{restaurant.id}}/edit">Edit</a>
    <form action="/restaurants/{{ restaurant.id }}?_method=DELETE" method="POST" style="display: inline;">
      <button class="btn btn-danger mr-1 mb-3 " type="submit">delete</button>
    </form>
  </div>
</div>